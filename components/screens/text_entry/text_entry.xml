<?xml version="1.0" encoding="utf-8" ?>
<component name="text_entry" extends="Group" >

    <interface>
        <field id="enter_button_pressed"
            type="int"
            alwaysnotify="true"
            alias="enter_button.buttonSelected" />

        <field id="text_content"
            type="string"
            alias="keyboard.text" />

        <function name="setLabelText" />
        <function name="setEnterButtonText" />
        <function name="setClearButtonText" />

    </interface>

    <script type="text/brightscript" uri="pkg:/components/screens/text_entry/text_entry.brs" />
    <script type="text/brightscript" uri="pkg:/source/utils/locale.brs" />

    <children>

        <Label
            id="server_label"
            font="font:MediumSystemFont"
            width="1500"
            text="Server Address:"
            translation="[100,250]"
            />

        <Keyboard
            id="keyboard"
            translation="[100, 350]"
            />

        <Button
            id="enter_button"
            text="Update"
            showFocusFootprint="true"
            translation="[100, 800]"
            />

        <Button
            id="clear_button"
            text="Clear"
            showFocusFootprint="true"
            translation="[500, 800]"
            />

    </children>
</component>
