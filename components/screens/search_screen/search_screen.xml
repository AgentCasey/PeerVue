<component name="search_screen" extends="Group" >

    <interface>
        <field id="enter_button_pressed"
            type="int"
            alwaysnotify="true"
            alias="enter_button.buttonSelected" />

        <field id="text_content"
            type="string"
            alias="keyboard.text" />

    </interface>

    <script type="text/brightscript" uri="pkg:/components/screens/search_screen/search_screen.brs" />

    <children>

        <Label
            id="prompt_text"
            text="Search..."
            font="font:MediumSystemFont"
            width="1500"
            translation="[100,250]"
            />

        <Keyboard
            id="keyboard"
            translation="[100, 350]"
            />

        <Button
            id="enter_button"
            text="Search..."
            showFocusFootprint="true"
            translation="[100, 800]"
            minWidth="150"
            />

        <Button
            id="clear_button"
            text="Clear"
            showFocusFootprint="true"
            translation="[400, 800]"
            minWidth="150"
            />

    </children>
</component>
