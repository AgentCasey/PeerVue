<?xml version="1.0" encoding="utf-8" ?>
<component name="search_screen" extends="Group" >
<script type="text/brightscript" uri="pkg:/components/screens/search_screen/search_screen.brs" />
    <interface>
        <field id="search_screen_button_pressed"
            type="int"
            alwaysnotify="true"
            alias="enter_button.buttonSelected" />

        <field id="search_string"
            type="string"
            alias="keyboard.text" />

        <function name="updateConfig" />

    </interface>

    <script type="text/brightscript" uri="pkg:/source/utils/locale.brs" />

    <children>

        <Label
            id="server_label"
            font="font:MediumSystemFont"
            width="800"
            text="Server Address:"
            translation="[100,250]"
            />

        <Keyboard
            id="keyboard"
            translation="[100, 350]"
            />

        <Button
            id="enter_button"
            text="Update"
            showFocusFootprint="true"
            translation="[100, 800]"
            />

    </children>
</component>
