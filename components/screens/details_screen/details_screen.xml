<component name="details_screen" extends="Group">
    <interface>
        <!-- Content fields -->
        <field id="content"
            type="assocarray"
            alwaysnotify="true"
            onChange="OnContentChange" />
        <field id="play_button_pressed"
            type="int"
            alwaysnotify="true"
            alias="play_button.buttonSelected" />
        <field id="related_button_pressed"
            type="int"
            alwaysnotify="true"
            alias="related_button.buttonSelected" />

        <field id="related_tags"    type="array" />
        <field id="video_owner"     type="string" />

        <function name="pushContent" />
        <function name="popContent" />
        <function name="resetStack" />

    </interface>

    <script type="text/brightscript" uri="pkg:/components/screens/details_screen/details_screen.brs" />
    <script type="text/brightscript" uri="pkg:/source/utils/config.brs" />

    <children>
        <Poster
            id="thumbnail"
            width="500"
            height="280"
            translation="[160,200]"
            />

        <Label
            id="duration"
            font="font:SmallestSystemFont"
            color="0xFFFFFF"
            wrap="true"
            width="500"
            text=""
            translation="[160,500]"
            horizAlign = "right"
            />

        <Label
            id="category"
            font="font:SmallestSystemFont"
            color="0xFFFFFF"
            wrap="true"
            width="500"
            text=""
            translation="[160,500]"
            horizAlign = "left"
            />

        <Label
            id="tags"
            font="font:SmallestSystemFont"
            color="0xFFFFFF"
            wrap="true"
            width="500"
            text=""
            translation="[160,550]"
            horizAlign = "left"
            />

        <Button
            id="play_button"
            text="Play"
            showFocusFootprint="true"
            translation="[160, 700]"
            minWidth="150"
            />

        <Button
            id="related_button"
            text="Related Videos"
            showFocusFootprint="true"
            translation="[160, 800]"
            minWidth="150"
            />

        <Label
            id="title"
            font="font:LargeBoldSystemFont"
            color="0xFFFFFF"
            text=""
            translation="[800,200]"
            />

        <Label
            id="publishdate"
            font="font:SmallestSystemFont"
            color="0xFFFFFF"
            wrap="true"
            width="500"
            text=""
            translation="[800,250]"
            />

        <Label
            id="owner"
            font="font:SmallestSystemFont"
            color="0xFFFFFF"
            wrap="true"
            width="500"
            text=""
            translation="[800,300]"
            />

        <ScrollableText
            id="description"
            font="font:MediumSystemFont"
            color="0xFFFFFF"
            width="1000"
            height="500"
            text=""
            translation="[800,350]"
            />
    </children>
</component>
