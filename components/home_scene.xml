<?xml version="1.0" encoding="utf-8" ?>
<component name="home_scene" extends="Scene">
    <interface>
        <field id="rowContent" type="node" alias="content_screen.content" onChange="OnChangeContent" />
        <!-- Row item selection handler -->
        <field id="rowItemSelected" type="intarray" alwaysNotify="true" alias="content_screen.rowItemSelected"/>
    </interface>

    <script type="text/brightscript" uri="pkg:/components/home_scene.brs" />
    <script type="text/brightscript" uri="pkg:/source/utils/config.brs" />
    <script type="text/brightscript" uri="pkg:/source/utils/locale.brs" />
    <children>
        <Poster
            id="MyInitDisplay"
            uri="pkg:/images/splash-screen_hd.jpg"
            width="1920"
            height="1080"
            />
            
        <overhang
            id="MyOverhang"
            visible="true"
            translation="[0,0]"
            logoUri="pkg:/images/logo.png"
            title = "PeerVue"
            showOptions="false"
            logoBaselineOffset="25"
            height="115"
            />
            
        <sidebar
            id="sidebar"
            visible="true"
            translation="[0,0]"
            />
            
        <content_screen
            id="content_screen"
            visible="false"
            translation="[0,0]"
            />
            
        <details_screen
            id="details_screen"
            visible="false"
            translation="[0,0]" 
            />
            
        <Video
            id="videoplayer"
            visible="false"
            translation="[0,0]"
            width="1920"
            height="1080" 
            />
            
        <text_entry
            id="search_screen"
            visible="false"
            />
            
        <text_entry
            id="server_setup"
            visible="false"
            />
            
        <Dialog
            title="Error"
            visible="false"
            id="error_dialog" />
        
        <Label
            id="about_screen"
            visible="false"
            font="font:MediumSystemFont"
            color="0xFFFFFF"
            wrap="true"
            width="1500"
            text=""
            translation="[200,300]" />
    </children>
</component>
